@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Shopping Cart</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <br />
        <br />
        <h1>Shopping Cart</h1>
        <br />
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Remove</th>
                    <th>Image</th>
                    <th>Product Name</th>
                    <th>Model</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="">
                        <input type="checkbox" value="option1" disabled="disabled"></td>
                    <td class="muted"><a href="#">
                                          <img src="~/Content/Images/GokuProduct.jpg" width="80" height="80">
                                      </a></td>
                    <td>Goku</td>
                    <td>Product 18</td>
                    <td>
                        <input type="text" placeholder="1" class="input-mini" disabled="disabled"></td>
                    <td>$2,350.00</td>
                    <td>$2,350.00</td>
                </tr>
                <tr>
                    <td class="">
                        <input type="checkbox" value="option1" disabled="disabled"></td>
                    <td class="muted"><a href="#">
                                          <img src="~/Content/Images/GokuProductSSJ.jpg" width="80" height="80">
                                      </a></td>
                    <td>Goku SSJ</td>
                    <td>Product 18</td>
                    <td>
                        <input type="text" placeholder="1" class="input-mini" disabled="disabled"></td>
                    <td>$2,350.00</td>
                    <td>$2,350.00</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td><strong>$4,700.00</strong></td>
                </tr>
            </tbody>
        </table>

        @using (Html.BeginForm("Checkout", "Cart", FormMethod.Post))
        {
            <div class="row">
                <div class="pull-right">
                    <button href="#" class="btn btn-primary" disabled="disabled">Continue shopping</button>
                    <button class="btn btn-primary" type="submit">Checkout</button>
                </div>
            </div>
        }

    </div>

</body>
</html>
